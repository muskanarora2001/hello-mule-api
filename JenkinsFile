pipeline{
	agent any
	stages {
		stage('Build Application') {
			steps {
				bat 'mvn clean install'
			}
		}
		stage('Test') {
			steps {
				echo 'Test Application...'
				bat 'mvn test'
			}
		}
		
		stage('Deploy CloudHub') {
					environment {
			ANYPOINT_CREDENTIALS = credentials('AnypointPlatform')
			}
			steps {
			echo 'Deploying application...'
			bat 'mvn package deploy -DmuleDeploy -Dusername=${ANYPOINT_CREDENTIALS_USR} -Dpassword=${ANYPOINT_CREDENTIALS_PSW} -Denvironment=Sandbox -DworkerType=Micro -Dworkers=1 -Dregion=us-east-1'
		}
	 }
   }
}